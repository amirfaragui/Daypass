@(Html.Kendo().Grid<ValueCards.Models.HistoryModel>()
      .Name("grid")
      .Columns(columns =>
      {
        columns.Bound(model => model.Id).Visible(false);
        columns.Bound(model => model.CEPAN).Width(120);
        columns.Bound(model => model.StationName).Width(120);
        columns.Bound(model => model.ActionDate).Width(120);
       

      })
  .ToolBar(t => t.Search())
  .Pageable(p =>
  {
    p.Refresh(true);
    p.PageSizes(new int[] { 50, 100, 200, 500 });
  })
  .Scrollable(scrollable => scrollable.Enabled(true).Height("calc(100vh - 230px)").Virtual(true))
  .Selectable(selectable => selectable.Mode(GridSelectionMode.Single))
  .DataSource(datasource => datasource
  .Ajax()
  .Model(model =>
    {
      model.Id(o => o.Id);
  })
  .PageSize(50)
  )
  .Resizable(resize => resize.Columns(true))
  .Sortable()
  
)

@section Scripts{ 
  <script type="text/javascript">
    
  </script>
}
