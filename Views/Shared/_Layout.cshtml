<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - DayPass </title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/jszip/2.4.0/jszip.js"></script>

  <link rel="stylesheet"
        href="https://kendo.cdn.telerik.com/2020.3.1021/styles/kendo.common-material.min.css"
        asp-fallback-href="~/lib/kendo-ui/styles/kendo.common-material.min.css"
        asp-fallback-test-class="k-common-test-class"
        asp-fallback-test-property="opacity" asp-fallback-test-value="0" />

  <link rel="stylesheet"
        href="https://kendo.cdn.telerik.com/2020.3.1021/styles/kendo.material.min.css"
        asp-fallback-href="~/lib/kendo-ui/styles/kendo.material.min.css"
        asp-fallback-test-class="k-theme-test-class"
        asp-fallback-test-property="opacity" asp-fallback-test-value="0" />

  <script src="https://kendo.cdn.telerik.com/2020.3.1021/js/kendo.all.min.js"
          asp-fallback-src="~/lib/kendo-ui/js/kendo.all.min.js"
          asp-fallback-test="window.kendo">
  </script>
  <script src="https://kendo.cdn.telerik.com/2020.3.1021/js/kendo.aspnetmvc.min.js"
          asp-fallback-src="~/lib/kendo-ui/js/kendo.aspnetmvc.min.js"
          asp-fallback-test="kendo.data.transports['aspnetmvc-ajax']">
  </script>

  <link rel="stylesheet" href="~/css/site.css" />

  @RenderSection("Styles", required: false)
</head>
<body>
  <header>
   @if (!(ViewBag.HideHeader ?? false)) // Check if HideHeader is true or null/false
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color: #114176">
                <a class="navbar-brand" asp-area="" asp-controller="Consumers" asp-action="Index">Day Pass Management</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @*<partial name="_LoginPartial" />*@
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Consumers" asp-action="Index">Cards</a>
                        </li>
                      @*  <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                    </ul>
                </div>
            </nav>
        }
    </header>
  <div class="container-fluid">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted">
    <div class="container-fluid">
      &copy; 205 - Day Pass Management Portal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
  </footer>

  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
